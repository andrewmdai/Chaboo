{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["client/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist"],
  "types": ["react/next", "react-dom/next"]
}
